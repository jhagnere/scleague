<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="self_season.season.manager.class">Self\SeasonBundle\Model\SeasonManager</parameter>
        <parameter key="self_season.team.class">Self\TeamBundle\Entity\Team</parameter>
        <parameter key="self_season.season.class">Self\SeasonBundle\Entity\Season</parameter>
        <parameter key="self_season.division.class">Self\SeasonBundle\Entity\Division</parameter>
        <parameter key="self_season.season_team.class">Self\SeasonBundle\Entity\SeasonTeam</parameter>
    </parameters>

    <services>
        <service id="self_season.season.manager" class="%self_season.season.manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%self_season.season.class%</argument>
            <argument>%self_season.team.class%</argument>
            <argument>%self_season.division.class%</argument>
            <argument>%self_season.season_team.class%</argument>
        </service>


    </services>


</container>
