{% extends 'SelfFrontBundle::layout.html.twig' %}

 {% block content %}
     <h1>Team List</h1>

     <div class="table-responsive">
        <table class="table table-hover">
            <thead>
             <tr>
                 <th>Name</th>
                 <th>Website</th>
                 <th>Buttons</th>
             </tr>
            </thead>
            <tbody>
             {% for team in teams%}
                 <tr>

                     <td><img height="25px" width="25px" src="{{ asset('uploads/logos/' ~ team.path) }}" /> {{ team.name }}</td>
                     <td><a href="{{ team.websiteUrl }}">{{ team.websiteUrl }}</a></td>
                     <td><a type="button" href="{{ path('self_team_team_view',  {'id' : team.id }) }}" > {{ icon('group') }}</a></td>
                 </tr>
             {% endfor %}
            </tbody>
        </table>
     </div>
 {% endblock %}